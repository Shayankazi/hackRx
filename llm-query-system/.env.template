# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/llm_query_db
# For SQLite (development): DATABASE_URL=sqlite:///./llm_query.db

# LLM Configuration
LLM_MODEL_NAME=meta-llama/Llama-2-70b-chat-hf
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.1

# Embedding Configuration
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Cross-encoder Configuration
CROSS_ENCODER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# FAISS Configuration
FAISS_INDEX_PATH=./data/faiss_index
MAX_RETRIEVAL_RESULTS=20
TOP_K_RERANK=5

# Document Processing
CHUNK_SIZE=512
CHUNK_OVERLAP=50
MAX_FILE_SIZE_MB=50

# API Keys (if using external services)
LLAMAPARSE_API_KEY=your_api_key_here
